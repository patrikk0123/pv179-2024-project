@model WebMVC.Areas.Admin.ViewModels.GiftCards.GiftCardFormViewModel;

@{
    ViewData["Title"] = "Create Gift Card";
}


<div class="container mx-auto p-4">
    <h1 class="text-3xl">Create giftcard</h1>
    @Html.ValidationSummary(false, "", new { @class = "text-red-500 text-sm mt-4" })

    <form asp-action="Create" method="post">
        <label class="form-control mb-2">
            <div class="label" asp-for="PriceReduction">
                <span class="label-text">Price Reduction</span>
            </div>
            <input id="name" asp-for="PriceReduction" class="input input-bordered w-full max-w-xs" />
            <span asp-validation-for="PriceReduction" class="text-danger"></span>
        </label>
        <label class="form-control mb-2">
            <div class="label" asp-for="AmountOfCoupons">
                <span class="label-text">Amount Of Coupons</span>
            </div>
            <input id="name" asp-for="AmountOfCoupons" class="input input-bordered w-full max-w-xs" />
            <span asp-validation-for="AmountOfCoupons" class="text-danger"></span>
        </label>
        <label class="form-control mb-2">
            <div class="label" asp-for="StartDate">
                <span class="label-text">Start Date</span>
            </div>
            <input id="name" asp-for="StartDate" class="input input-bordered w-full max-w-xs" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </label>
        <label class="form-control mb-2">
            <div class="label" asp-for="ExpiryDate">
                <span class="label-text">Expiration Date</span>
            </div>
            <input id="name" asp-for="ExpiryDate" class="input input-bordered w-full max-w-xs" />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </label>
        <button type="submit" class="btn btn-primary text-white">Create</button>
    </form>
</div>
