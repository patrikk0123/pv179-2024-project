@using DAL.Models
@using WebMVC.Areas.Admin.ViewModels.Orders;

@model OrderUpdateViewModel;

@{
    ViewData["Title"] = "Update Order";
    
    var orderStatuses = Enum.GetValues(typeof(OrderStatus)).Cast<OrderStatus>();
}


<div class="container mx-auto p-4">
    <h1 class="text-3xl">Update Order</h1>
    @Html.ValidationSummary(false, "", new { @class = "text-red-500 text-sm mt-4" })

    <form asp-action="Update" method="post">
        <label asp-for="OrderStatus" class="form-control mb-2">
            <div class="label">
                <span class="label-text">Order Status</span>
            </div>
            @Html.DropDownListFor(
                model => model.OrderStatus,
                new SelectList(orderStatuses),
                new { @class = "select select-bordered w-full max-w-xs" }
            )
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </label>
        
        <button type="submit" class="btn btn-primary text-white">Update</button>
    </form>
</div>