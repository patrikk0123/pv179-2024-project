@using WebMVC.Areas.Admin.ViewModels.Users;

@model UserUpdateViewModel;

@{
    ViewData["Title"] = "Update User";
}


<div class="container mx-auto p-4">
    <h1 class="text-3xl">Update User</h1>
    @Html.ValidationSummary(false, "", new { @class = "text-red-500 text-sm mt-4" })

    <form asp-action="Update" method="post">
        <label asp-for="Password" class="form-control mb-2">
            <div class="label">
                <span class="label-text">Password</span>
            </div>
            <input id="name" asp-for="Password" class="input input-bordered w-full max-w-xs" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </label>
        
        <button type="submit" class="btn btn-primary text-white">Update</button>
    </form>
</div>