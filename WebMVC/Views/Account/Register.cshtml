@model RegisterViewModel

<h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Register</h2>

<form asp-action="Register" method="post" class="max-w-md mx-auto">
    <div class="mb-4">
        <label asp-for="Username" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
        <span asp-validation-for="Username" class="text-red-500 text-xs italic"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
        <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="Password" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
        <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
    </div>
    <div class="mb-4">
        <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="ConfirmPassword" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
        <span asp-validation-for="IsAdmin" class="text-red-500 text-xs italic"></span>
    </div>
    <div class="mb-4">
        <label asp-for="IsAdmin" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="IsAdmin" type="checkbox" />
        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs italic"></span>
    </div>
    <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Register
        </button>
    </div>
    @Html.ValidationSummary(false, "", new { @class = "text-red-500 text-sm mt-4" })
</form>