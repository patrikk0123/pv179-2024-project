@using WebMVC.ViewModels.Order;

@model OrderListViewModel

@{
    ViewData["Title"] = $"Orders | {User.Identity.Name}";
}


<div class="container mx-auto p-4">
    <p class="text-2xl mb-6">Your Orders</p>
    
    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                <tr>
                    <th>Order</th>
                    <th>Order Status</th>
                    <th>Total Price</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>#<a asp-area="" asp-controller="Profile" asp-action="OrderDetail" asp-route-orderId="@order.Id">@order.Id</a></td>
                        <td>@order.OrderStatus</td>
                        <td>@order.TotalPriceâ‚¬</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center">
            <h2 class="text-lg font-semibold text-gray-800">No orders.</h2>
        </div>
    }
</div>