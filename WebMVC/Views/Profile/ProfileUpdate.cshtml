@using WebMVC.ViewModels.User;

@model UserUpdateViewModel;

@{
    ViewData["Title"] = $"Update Profile | {User.Identity.Name}";
}


<div class="container mx-auto p-4">
    <h1 class="text-2xl mb-6">Update Profile</h1>
    
    <form asp-controller="Profile" method="post">
        <label asp-for="Username" class="form-control mb-2">
            <div class="label">
                <span class="label-text">Username</span>
            </div>
            <input asp-for="Username" value="@Model.Username" class="input input-bordered w-full max-w-xs" />
            <span asp-validation-for="Username" class="text-danger" />
        </label>

        <label asp-for="Email" class="form-control mb-4">
            <div class="label">
                <span class="label-text">Email</span>
            </div>
            <input asp-for="Email" value="@Model.Email" type="email" class="input input-bordered w-full max-w-xs" />
            <span asp-validation-for="Email" class="text-danger" />
        </label>

        <button type="submit" class="btn btn-primary text-white">Update</button>

        @Html.ValidationSummary(false, "", new { @class = "text-red-500 text-sm mt-4" })
    </form>
</div>